<div class="list" id="list" empty-message="{{msg}}">{{#list}}{{#.}}
  <div class="list-item" sha="{{sha}}" name="{{name}}"
    action="{{#isDirectory}}folder{{/isDirectory}}{{#isFile}}file{{/isFile}}">
    <span class="icon {{type}}"></span>
    <span class="container">
      <span class="text">{{name}}</span>
      {{#isFile}}
      <small class="value">{{size}}</small>
      {{/isFile}}
    </span>
  </div>
  {{/.}}{{/list}}</div>